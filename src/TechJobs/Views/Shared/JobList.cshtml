<table class="job-listing">
    <tr>
        @{
            List<Dictionary<string, string>> jobs = ViewBag.jobs;
            foreach (KeyValuePair<string, string> column in jobs[0])
            {
                <th>@column.Key.ToUpper()</th>

            }
        }
    </tr>

    @{
        string link = null;
        foreach (Dictionary<string, string> job in jobs)
        {
            <tr>
                @{ foreach (KeyValuePair<string, string> column in job)
                    {
                        if (column.Key == "name")
                        {
                            <td>@column.Value</td>
                        }
                        else
                        {
                            <td><a asp-controller="Search" asp-action="Results" asp-route-searchTerm="@column.Value" asp-route-searchType="@column.Key">@column.Value</a></td>
                        }
                    }
                }
            </tr>
        }
    }
</table>